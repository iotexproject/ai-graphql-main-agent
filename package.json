{
  "name": "graphql-main-agent-multi-worker",
  "version": "1.0.0",
  "description": "Multi-worker deployment for GraphQL Main Agent",
  "scripts": {
    "dev": "concurrently \"npm run dev:auth\" \"npm run dev:chat\" \"npm run dev:mcp\" \"npm run dev:rag\" \"npm run dev:gateway\"",
    "dev:auth": "cd workers/auth && wrangler dev --port 8001",
    "dev:chat": "cd workers/chat && wrangler dev --port 8002", 
    "dev:mcp": "cd workers/mcp && wrangler dev --port 8003",
    "dev:rag": "cd workers/rag && wrangler dev --port 8004",
    "dev:gateway": "cd workers/gateway && wrangler dev --port 8000",
    "deploy": "npm run deploy:auth && npm run deploy:chat && npm run deploy:mcp && npm run deploy:rag && npm run deploy:gateway",
    "deploy:auth": "cd workers/auth && wrangler deploy",
    "deploy:chat": "cd workers/chat && wrangler deploy",
    "deploy:mcp": "cd workers/mcp && wrangler deploy", 
    "deploy:rag": "cd workers/rag && wrangler deploy",
    "deploy:gateway": "cd workers/gateway && wrangler deploy",
    "logs:auth": "cd workers/auth && wrangler tail",
    "logs:chat": "cd workers/chat && wrangler tail",
    "logs:mcp": "cd workers/mcp && wrangler tail",
    "logs:rag": "cd workers/rag && wrangler tail",
    "logs:gateway": "cd workers/gateway && wrangler tail",
    "build": "npm run build:shared && npm run build:workers",
    "build:shared": "tsc workers/shared/types.ts --declaration --outDir dist/shared",
    "build:workers": "concurrently \"npm run build:auth\" \"npm run build:chat\" \"npm run build:mcp\" \"npm run build:rag\" \"npm run build:gateway\"",
    "build:auth": "cd workers/auth && wrangler build",
    "build:chat": "cd workers/chat && wrangler build",
    "build:mcp": "cd workers/mcp && wrangler build",
    "build:rag": "cd workers/rag && wrangler build", 
    "build:gateway": "cd workers/gateway && wrangler build",
    "test": "npm run test:workers",
    "test:workers": "concurrently \"npm run test:auth\" \"npm run test:chat\" \"npm run test:mcp\" \"npm run test:rag\" \"npm run test:gateway\"",
    "test:auth": "cd workers/auth && npm test",
    "test:chat": "cd workers/chat && npm test",
    "test:mcp": "cd workers/mcp && npm test",
    "test:rag": "cd workers/rag && npm test",
    "test:gateway": "cd workers/gateway && npm test"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "wrangler": "^3.84.1"
  },
  "dependencies": {
    "@ai-sdk/openai": "^0.0.66",
    "@hono/zod-validator": "^0.4.1", 
    "@mastra/pinecone": "^0.1.19",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "agents": "^0.1.0",
    "ai": "^4.0.17",
    "hono": "^4.6.13",
    "zod": "^3.23.8",
    "zod-openapi": "^2.19.0"
  },
  "workspaces": [
    "workers/*"
  ]
}
